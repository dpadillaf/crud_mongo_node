<% include partials/_header %>

    <div class="container">
        <div class="row">
            <div class="col-md-5 mb-4">
                <div class="card">
                    <div class="card-body">
                        <p class="h2">Nuevo contacto</p>
                        <form action="<%= edit ? '/editar/'+ contact._id : '/add' %>" method="POST">
                            <div class="form-group">
                                <input type="text" name="nombre" placeholder="Ingrese el nombre" class="form-control" 
                                value="<%= edit ? contact.nombre : '' %>">
                            </div>

                            <div class="form-group">
                                <input type="email" name="email" placeholder="Ingrese el e-mail" class="form-control" 
                                value="<%= edit ? contact.email : '' %>">
                            </div>

                            <div class="form-group">
                                <input type="number" name="telefono" placeholder="Ingrese el teléfono" class="form-control" 
                                value="<%= edit ? contact.telefono : '' %>">
                            </div>

                            <button type="submit" class="btn btn-primary btn-block"><%= edit ? 'Actualizar' : 'Agregar' %></button>
                        </form>

                    </div>
                </div>
            </div>

            <div class="col-md-10">
                <table class="table table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>N°</th>
                            <th>Nombre</th>
                            <th>E-mail</th>
                            <th>Teléfono</th>
                            <th>Operaciones</th>
                        </tr>
                    </thead>

                    <tbody>
                        <% for ( let i = 0; i < contacts.length; i++ ){ %>
                            <tr>
                                <td><%= i + 1 %></td>
                                <td><%= contacts[i].nombre %></td>
                                <td><%= contacts[i].email %></td>
                                <td><%= contacts[i].telefono %></td>
                                <td>
                                    <a href="/editar/<%= contacts[i]._id %>" class="btn btn-info">Editar</a>
                                    <a href="/borrar/<%= contacts[i]._id %>" class="btn btn-danger">Borrar</a>
                                </td>
                            </tr>
                        <% } %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

<% include partials/_footer %>

